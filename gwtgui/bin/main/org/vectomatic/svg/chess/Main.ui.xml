<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='constants' type='org.vectomatic.svg.chess.ChessConstants'/>
    <ui:with field='style' type='org.vectomatic.svg.chess.ChessCss'/>

    <g:FocusPanel ui:field="focusPanel" width="100%" height="100%">
        <g:DockLayoutPanel width="100%" height="100%">
            <g:center>
            <g:HTML ui:field="boardContainer" />
            </g:center>
            <g:east size="400">
                <g:SimplePanel>
                    <g:FlowPanel>
                        <g:Label ui:field='statusLabel' text="{constants.status}"
                                 styleName="{style.categoryLabel}"/>
                        <g:Label ui:field='status' text="-" styleName="{style.text}"/>
                        <g:Label ui:field='currentPlayerLabel' text="{constants.player}"
                                 styleName="{style.categoryLabel}"/>
                        <g:Label ui:field='currentPlayerValueLabel' text="-"
                                 styleName="{style.text}"/>
                        <g:Label ui:field='actionsLabel' text="{constants.actions}"
                                 styleName="{style.categoryLabel}"/>
                        <g:HorizontalPanel>
                            <g:Button ui:field='undoButton' text="{constants.undo}"
                                      styleName="{style.text}"/>
                            <g:Button ui:field='redoButton' text="{constants.redo}"
                                      styleName="{style.text}"/>
                            <g:Button ui:field='restartButton' text="{constants.restart}"
                                      styleName="{style.text}"/>
                        </g:HorizontalPanel>
                        <g:Label ui:field='modeLabel' text="{constants.mode}"
                                 styleName="{style.categoryLabel}"/>
                        <g:ListBox ui:field='modeListBox' styleName="{style.text}"/>
						<g:ListBox ui:field='chessVariantListBox' styleName="{style.text}"/>
						<g:Label ui:field='reflectionLabel' text="{constants.reflectionTime}"
                                 styleName="{style.categoryLabel}"/>
                        <g:ListBox ui:field='timeListBox' styleName="{style.text}"/>
                        <g:VerticalPanel width="100%">
                            <g:Label ui:field='fenLabel' text="{constants.fen}"
                                     styleName="{style.categoryLabel}"/>
                            <g:TextArea ui:field='fenArea' width="390px" visibleLines='2'/>
                            <g:Button ui:field='fenButton' text="{constants.setFen}"/>
                        </g:VerticalPanel>
                        <g:Label ui:field='historyLabel' text="{constants.history}"
                                 styleName="{style.categoryLabel}"/>
                        <g:ScrollPanel ui:field='historyScrollPanel' alwaysShowScrollBars="true"
                                       height="200px">
                            <g:TextArea ui:field='historyArea' width="390px"
                                        styleName="{style.text}"/>
                        </g:ScrollPanel>
                        <!--  g:DisclosurePanel ui:field='advancedPanel'
                            width="100%">
                            <g:header />
                            <g:VerticalPanel width="100%">
                                <g:Label ui:field='fenLabel' text="{constants.fen}"
                                    styleName="{style.categoryLabel}" />
                                <g:TextArea ui:field='fenArea' width="100%"
                                    visibleLines='4' />
                                <g:Button ui:field='fenButton' text="{constants.setFen}" />
                            </g:VerticalPanel>
                        </g:DisclosurePanel-->
                        <g:HTML ui:field="about" />
                    </g:FlowPanel>
                </g:SimplePanel>
            </g:east>
            <g:south size="20">
                <g:Label ui:field='thinkingArea'/>
            </g:south>
        </g:DockLayoutPanel>
    </g:FocusPanel>
</ui:UiBinder>
